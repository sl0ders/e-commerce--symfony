{% extends 'base.html.twig' %}
{% trans_default_domain "NegasProjectTrans" %}
{% block title %}Page de connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="row text-center">
        <div class="col-md-10 m-auto border shadow p-5 rgba-blue-grey-light">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous etes connecter en tant que : {{ app.user.username }}, <a href="{{ path('app_logout') }}">Deconnection
                            ?</a>
                    </div>
                {% endif %}

                <h1 class="mb-5 card-header">{{ "user.title.login"| trans }}</h1>

                <div class="md-form">
                    <label for="inputEmail">{{ "user.label.email"| trans }}</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                           required autofocus>
                </div>
                <div class="md-form">
                    <label for="inputPassword">{{ "user.label.password"| trans }}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
                <div class="button">
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">
                    <div class="text-center">
                        <button class="mt-3 btn btn-primary" type="submit">
                            {{ "button.connection"| trans }}
                        </button>
                    </div>
                </div>
            </form>
            <div class="text-center">
                o√π {{ "text.or"| trans }}
                <div class="button">
                    <a href="{{ path('app_signin') }}">
                        <button class="btn btn-success text-white">
                            {{ "button.signin" | trans }}
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
