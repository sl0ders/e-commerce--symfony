{% extends 'base.html.twig' %}
{% trans_default_domain "NegasProjectTrans" %}
{% block title %}Page de connexion{% endblock %}

{% block body %}
    <div class="mt-5">
        <div class="col-md-5 m-auto border shadow px-5 py-3 rgba-blue-grey-light">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous etes connecter en tant que : {{ app.user.username }}, <a href="{{ path('app_logout') }}">Deconnection
                            ?</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
                <div class="md-form">
                    <label for="inputEmail">Adresse email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                           required autofocus>
                </div>
                <div class="md-form">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
                <div class="button">
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">
                    <div class="text-center">
                        <button class="mt-3 btn btn-primary" type="submit">
                            Connexion
                        </button>
                    </div>
                </div>
            </form>
            <div class="text-center">
                o√π
                <div class="button">
                    <a href="{{ path('app_signin') }}">
                        <button class="btn btn-success text-white">
                            S'inscrire
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
