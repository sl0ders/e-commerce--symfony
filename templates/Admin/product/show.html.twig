{% extends 'base.html.twig' %}

{% block title %}Produit {{ product.name }}{% endblock %}

{% block body %}
    <div class="datatable">
        <div class="h1 m-auto text-center">Produit</div>
        <div class="datatable_content">
            <div class="responsive-table-line" style="margin:0 auto;max-width:1700px;">
                <table class="table table-bordered table-condensed table-body-center">
                    <tbody>
                    <tr>
                        <th>Nom</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ product.description }}</td>
                    </tr>
                    <tr>
                        <th>Package</th>
                        <td>{{ product.package.quantity }} {{ product.package.unity }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ product.price| format_currency("EUR") }}</td>
                    </tr>
                    <tr>
                        <th>Grande image</th>
                        <td><img src="{{ vich_uploader_asset(product.picture, 'imageFile') }}" alt="{{ product.name }} large" width="500"></td>
                    </tr>
                    <tr>
                        <th>Petite image</th>
                        <td>
                            <img class="img_png" src="/images/product/{{ product.filenamePng }}" alt="{{ product.name }} small" width="500">
                        </td>
                    </tr>

                    </tbody>
                </table>
            </div>
            <div class="button">
                <a href="{{ path('admin_product_index') }}" class="btn btn-primary">Retour</a>
                <a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="btn btn-warning text-white"><i
                            class="fas fa-edit"></i></a>
                {{ include('Admin/product/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}


