{% trans_default_domain "NegasProjectTrans" %}
{% extends "base.html.twig" %}
{% block title %}

{% endblock %}

{% block body %}
    <div class="datatable">
        <h5 class="text-center">
            <strong>{{ "company.title.show" | trans({"%companyName%": company.name}) }}</strong>
        </h5>
        <div class="datatable_content">
            <table class="table">
                <tbody>
                <tr>
                    <th>{{ "company.name" | trans }}</th>
                    <td>{{ company.name }}</td>
                </tr>
                <tr>
                    <th>{{ "company.email" | trans }}</th>
                    <td>{{ company.email }}</td>
                </tr>
                <tr>
                    <th>{{ "company.createdAt" | trans }}</th>
                    <td>{{ company.createdAt| date("d/m/Y") }}</td>
                </tr>
                <tr>
                    <th>{{ "company.address" | trans }}</th>
                    <td>{{ company.address }}</td>
                </tr>
                <tr>
                    <th>{{ "company.managers.list"| trans }}</th>
                    {% for manager in company.managers %}
                    <td class="d-flex justify-content-center">
                            <div>{{ manager.fullname }} - {{ manager.status }}</div><br>
                    </td>
                    {% endfor %}
                </tr>
                </tbody>
            </table>
        </div>
        <div class="button">
            <a class="btn btn-warning"
               href="{{ path('admin_company_edit', {'id': company.id}) }}">{{ "button.edit"| trans }}</a>
            <a class="btn btn-primary"
               href="{{ path('admin_home', {'id': company.id}) }}">{{ "button.return"| trans }}</a>
        </div>
    </div>
{% endblock %}
