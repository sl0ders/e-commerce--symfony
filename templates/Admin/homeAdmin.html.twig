{% extends 'base.html.twig' %}
{% trans_default_domain "NegasProjectTrans" %}
{% block title %}{{ "home_admin.title.home" | trans }}{% endblock %}
{% block body %}

    <div class="admin-home text-center mt-2 font-weight-bold">
        <h2 class=" font-weight-bold">{{ "home_admin.title.first" | trans }}<em class="h5 font-weight-bold">{{ "home_admin.title.second" |trans }}</em></h2>
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="case-stock case col-md-3 m-1 wow fadeInUpBig">
                    <a class="text-decoration-none text-black-50" href="{{ path('admin_stock_index') }}">
                        <h3 class="text-center mt-3 mb-2">{{ "home_admin.stock_management"|trans }}</h3>
                        <i class="fas fa-layer-group fa-5x"></i>
                    </a>
                </div>
                <a href="{{ path('admin_contact_index') }}" class="case-contact case col-md-3 m-1 rgba-light-blue-light wow fadeInUpBig">
                    <div class="text-decoration-none text-black-50">
                        <h3 class="text-center mt-3 mb-2">{{ "home_admin.contact_management"|trans }}</h3>
                        <i class="fas fa-envelope-open-text fa-5x"></i>
                    </div>
                </a>
                <a href="{{ path('admin_product_index') }}" class="case-product case col-md-3 m-1 wow fadeInUpBig">
                    <div class="text-decoration-none text-black-50">
                        <h3 class="text-center mt-3 mb-2">{{ "home_admin.product_management"|trans }}</h3>
                        <i class="fas fa-apple-alt fa-5x"></i></div>
                </a>
                <a href="{{ path('admin_user_index') }}" class="case-user case col-md-3 m-1 wow fadeInUpBig">
                    <div class="text-decoration-none text-black-50">
                        <h3 class="text-center mt-3 mb-2">{{ "home_admin.user_management"|trans }}</h3>
                        <i class="fas fa-users fa-5x"></i>
                    </div>
                </a>
                <a href="{{ path('admin_news_index') }}" class="case-news case col-md-3 m-1 wow fadeInUpBig">
                    <div class="text-decoration-none text-black-50">
                        <h3 class="text-center mt-3 mb-5">{{ "home_admin.news_management"|trans }}</h3>
                        <i class="fas fa-newspaper fa-5x"></i>
                    </div>
                </a>
                <a href="{{ path('admin_orders_index') }}" class="case-order case col-md-3 m-1 wow fadeInUpBig">
                    <div class="text-decoration-none text-black-50">
                        <h3 class="text-center mt-3 mb-5">{{ "home_admin.orders_management"|trans }}</h3>
                        <i class="fas fa-dolly-flatbed fa-5x"></i></div>
                </a>
                <a href="{{ path('admin_package_index') }}" class="case-packing case col-md-3 m-3 wow fadeInUpBig">
                    <div class="text-decoration-none text-black-50">
                        <h3 class="text-center mt-3 mb-5">{{ "home_admin.package_management"|trans }}</h3>
                        <i class="fas fa-box-open fa-5x"></i></div>
                </a>
            </div>
        </div>
    </div>
{% endblock %}



