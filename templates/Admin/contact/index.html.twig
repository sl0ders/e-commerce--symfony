{% extends 'base.html.twig' %}
{% trans_default_domain "NegasProjectTrans" %}
{% block title %}Index de gestion des contacts{% endblock %}

{% block body %}
<div class="datatable">
    <h5 class="card-header text-center py-4">
        <strong>Index de gestion des contacts</strong>
    </h5>
    <div class="datatable_content">
        <div class="responsive-table-line" style="margin:0 auto;max-width:1700px;">
            <table class="table table-bordered table-condensed table-body-center">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Firstname</th>
                    <th>Adresse email</th>
                    <th>Subject</th>
                    <th>Message</th>
                    <th>Crée le ...</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for contact in contacts %}
                    <tr>
                        <td>{{ contact.id }}</td>
                        <td>{{ contact.username }}</td>
                        <td>{{ contact.firstname }}</td>
                        <td>{{ contact.email }}</td>
                        <td>{{ contact.subject }}</td>
                        <td>{{ contact.message }}</td>
                        <td>{{ contact.createdAt ? contact.createdAt|date('d/m/Y H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('admin_contact_show', {'id': contact.id}) }}" class="btn btn-warning">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Aucun élément enregistré</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    </div>


    {% endblock %}
