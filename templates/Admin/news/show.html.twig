{% extends 'base.html.twig' %}
{% trans_default_domain "NegasProjectTrans" %}
{% block title %}News "{{ news.title }}"{% endblock %}

{% block body %}
    <div class="datatable">
        <div class="h1 m-auto">
            News "{{ news.title }}"
        </div>
        <div class="datatable_content">
            <table class="table">
                <tbody>
                <tr>
                    <th>{{ "news.subject" | trans }}</th>
                    <td>{{ news.title }}</td>
                </tr>
                <tr>
                    <th>{{ "news.content" | trans }}</th>
                    <td>{{ news.content }}</td>
                </tr>
                <tr>
                    <th>{{ "news.picture" | trans }}</th>
                    <td><img src="{{ vich_uploader_asset(news.product.picture) | imagine_filter("medium") }}" alt="{{ news.product.name }}"></td>
                </tr>
                <tr>
                    <th>{{ "table.created_at" | trans }}</th>
                    <td>{{ news.createdAt ? news.createdAt|date('d/m/Y H:i:s') : '' }}</td>
                </tr>
                </tbody>
            </table>
            <div class="button">
                <a href="{{ path('admin_news_index') }}" class="btn btn-primary">{{ "button.return"| trans }}</a>
                <a class="btn btn-warning" href="{{ path('admin_news_edit', {'id': news.id}) }}">Ã‰diter</a>
                {{ include('Admin/news/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
