{% extends 'base.html.twig' %}

{% block title %}Index de gestion des news{% endblock %}

{% block body %}
    <div class="datatable">
        <h5 class="card-header text-center py-4">
            <strong>Index de gestion des news</strong>
        </h5>
        <div class="datatable_content">
            <div class="responsive-table-line" style="margin:0 auto;max-width:1700px;">
                <table class="table table-bordered table-condensed table-body-center">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Contenu</th>
                        <th>Image</th>
                        <th>Crée le ...</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for news in news %}
                        <tr>
                            <td>{{ news.id }}</td>
                            <td>{{ news.Title }}</td>
                            <td>{{ news.content }}</td>
                            <td>{{ news.filename }}</td>
                            <td>{{ news.createdAt ? news.createdAt|date('d/m/Y H:i:s') : '' }}</td>
                            <td>
                                <a href="{{ path('admin_news_show', {'id': news.id}) }}" class="btn btn-primary"><i
                                            class="fas fa-eye"></i></a>
                                <a href="{{ path('admin_news_edit', {'id': news.id}) }}" class="btn btn-warning"><i
                                            class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">Aucun élément enregistré</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="button">
                <a href="{{ path('admin_news_new') }}" class="btn btn-success text-white">Création d'un élément</a>
            </div>
        </div>
    </div>
{% endblock %}
