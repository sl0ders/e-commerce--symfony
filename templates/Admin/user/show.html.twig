{% extends 'base.html.twig' %}
{% trans_default_domain "NegasProjectTrans" %}
{% block title %}Utilisateur {{ user.name }}{% endblock %}

{% block body %}
    <div class="datatable">
        <div class="h1 m-auto text-center">Utilisateur {{ user.name }}</div>
        <div class="datatable_content">
            <div class="responsive-table-line">
                <table class="table table-bordered table-condensed table-body-center">
                    <tbody>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>
                            {% if user.status == "visiteur" %}
                                Visiteur
                            {% elseif user.status == "client" %}
                                Client(e)
                            {% elseif user.status == "administrateur" %}
                                Administrateur
                            {% elseif user.status == "ban" %}
                                Utilisateur bannie
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ user.firstname }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.name }}</td>
                    </tr>
                    <tr>
                        <th>Pseudo</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>Date de creation du compte</th>
                        <td>{{ user.createdAt ? user.createdAt|date('d/m/Y H:i:s') : '' }}</td>
                    </tr>
                    {% if user.adresse %}
                        <tr>
                            <th>Adresse</th>
                            <td>{{ user.adresse }}</td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
            <a data-target="{{ path('admin_user_editStatus', {'id': user.id}) }}" data-tooltip="voir"
               class="font-weight-bold tooltipped modal-trigger right-align" href="#modal1">
                <button class="btn btn-warning text-white" data-toggle="modal" data-target="#centralModalSm">
                    <i class="fas fa-edit"></i>
                </button>
            </a>
            {{ include('Admin/user/_delete_form.html.twig') }}
            <div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                 aria-hidden="true">
                <!-- Change class .modal-sm to change the size of the modal -->
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title w-100" id="myModalLabel">Modifier le status</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <a href="{{ path('admin_user_index') }}" class="btn btn-primary">Retour</a>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            //On écoute le "click" sur le bouton ayant la classe "modal-trigger"
            $('.modal-trigger').click(function () {
                //On initialise les modales materialize
                $('.modal').modal();
                //On récupère l'url depuis la propriété "Data-target" de la balise html a
                url = $(this).attr('data-target');
                //on fait un appel ajax vers l'action symfony qui nous renvoie la vue
                $.get(url, function (data) {
                    //on injecte le html dans la modale
                    $('.modal-content').html(data);
                    //on ouvre la modale
                    $('#modal1').modal();
                });
            })
        });
    </script>
{% endblock %}

