{% extends 'base.html.twig' %}
{% trans_default_domain "NegasProjectTrans" %}
{% block title %}{% endblock %}

{% block body %}
    <div class='container'>
        <div class="datatable">
            <div class='h1 m-auto'>Vos informations</div>
            <div class="datatable_content">
                <div class='responsive-table-line' style='margin:0 auto;max-width:1700px;'>
                    <table class='table table-bordered text-center table-condensed table-body-center'>
                        <tbody>
                        <tr>
                            <th scope='row' class='font-weight-bolder'>Nom</th>
                            <td>{{ user.name }}</td>
                        </tr>
                        <tr>
                            <th scope='row' class='font-weight-bolder'>Prenom</th>
                            <td>{{ user.firstname }}</td>
                        </tr>
                        <tr>
                            <th scope='row' class='font-weight-bolder'>Adresse email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th scope='row' class='font-weight-bolder'>Status</th>
                            <td>
                                {% if user.status == 'visiteur' %}
                                    Visiteur
                                {% elseif user.status == 'Client' %}
                                    Client(e)
                                {% elseif user.status == 'administrateur' %}
                                    Administrateur
                                {% elseif user.status == 'ban' %}
                                    Utilisateur bannie
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    {% if user.status == 'Client' or  user.status == 2 %}
                        <a href='{{ path('public_edit_user', {'name' : user.name}) }}' class='btn-success btn'>Modifier
                            mon compte</a>
                    {% endif %}
                    <a href='{{ path('home_user', {'name' : app.user.name}) }}' class='btn btn-primary float-left'>{{ "button.return"| trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
